<!doctype html>
<html lang="en">
	<head>
		<title>
			Registration
		</title>
		<meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
</head>
<body>
<h1>Il Arrabiato</h1>

<%= form_for(:registrations, url: sign_in_path) do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="form-group">
    <%= f.label :password, "Password" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres m√≠nimo)</em>
    <% end %><br/>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>
  <div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>

<%= link_to 'Back', root_path %>
<% end %>
</body>
