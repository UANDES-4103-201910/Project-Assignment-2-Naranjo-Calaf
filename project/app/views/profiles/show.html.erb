<html lang="en">
	<head>
		<title>
			Show_Profile
		</title>
		<meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
</head>
<body>
<h1>Il Arrabiato</h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>User(ID):</strong>
  <%= @profile.user %>
</p>

<p>
  <strong>Picture:</strong>
  <%= @profile.picture %>
</p>

<p>
  <strong>Biography:</strong>
  <%= @profile.biography %>
</p>

<p>
  <strong>City:</strong>
  <%= @profile.city %>
</p>

<p>
  <strong>Country:</strong>
  <%= @profile.country %>
</p>

<button>
<%= link_to 'New Post', new_post_path %>
</button>

<button>
<%= link_to 'View Dumpster', dumpsters_path %>
</button>

<button>
<%= link_to 'View Blacklist ', blacklists_path %>
</button>

<table>
  <thead>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Description</th>
    <th>Open</th>
    <th>Location</th>
    <th>Solved</th>
    <th>Date</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.user %></td>
      <td><%= post.title %></td>
      <td><%= post.description %></td>
      <td><%= post.open %></td>
      <td><%= post.location %></td>
      <td><%= post.solved %></td>
      <td><%= post.date %></td>
      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<div>
  <%= link_to 'Edit', edit_profile_path(@profile) %> |
  <%= link_to 'Log Out', destroy_user_session_url %>
</div>
</body>
