<!doctype html>
<html lang="en">
<head>
  <title>
    Show_innapropiate
  </title>
  <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
</head>

<body>
<div class="masthead">
  <h1><%= link_to "Il Arrabiato", root_path %></h1>
  <div class="topnav">
    <%= form_tag(posts_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search" %>
      <%= submit_tag "Search" %>
      <%= link_to "Log Out", destroy_user_session_path, :method => 'delete'%>
    <% end %>
    <%#= form_tag(posts_path, :method => "get", id: "search-form") do %>
    <%#= text_field_tag :search, params[:search], placeholder: "Search User" %>
    <%#= submit_tag "SearchUser" %>
    <%# end %>
  </div>
</div>

<div class="new_post-section" style="height: 500px">
  <h2 align="center">Show Innapropiate</h2>
  <br>
  <div align="center">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>User:</strong>
      <%= @innapropiate.user %>
    </p>

    <p>
      <strong>Post:</strong>
      <%= @innapropiate.post %>
    </p>

    <p>
      <strong>Coment:</strong>
      <%= @innapropiate.coment %>
    </p>

    <%= link_to 'Edit', edit_innapropiate_path(@innapropiate) %> |
    <%= link_to 'Back', innapropiates_path %>
  </div>
</div>
</body>