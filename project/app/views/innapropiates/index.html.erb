<!doctype html>
<html lang="en">
<head>
  <title>
    Innapropiates
  </title>
  <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
</head>

<body>

<div class="masthead">
  <h1><%= link_to "Il Arrabiato", root_path %></h1>
  <div class="topnav">
    <%= form_tag(posts_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search" %>
      <%= submit_tag "Search" %>
      <%= link_to "Log Out", destroy_user_session_path, :method => 'delete'%>
    <% end %>
    <%#= form_tag(posts_path, :method => "get", id: "search-form") do %>
    <%#= text_field_tag :search, params[:search], placeholder: "Search User" %>
    <%#= submit_tag "SearchUser" %>
    <%# end %>
  </div>
</div>

<p id="notice"><%= notice %></p>

<div class="new_post-section" style="height: 500px">
  <h2 align="center">Innapropiates</h2>
  <br>
  <div align="center">
    <table>
      <thead>
      <tr>
        <th>User</th>
        <th>Post</th>
        <th>Coment</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @innapropiates.each do |innapropiate| %>
          <td><%= innapropiate.user.name %></td>
          <td><%= innapropiate.post.title %></td>
          <td><%= innapropiate.coment %></td>
          <td><%= link_to 'Show', innapropiate %></td>
          <td><%= link_to 'Edit', edit_innapropiate_path(innapropiate) %></td>
          <td><%= link_to 'Destroy', innapropiate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Innapropiate', new_innapropiate_path %>|
    <%= link_to 'Home', root_path %>

  </div>
</div>
</body>


